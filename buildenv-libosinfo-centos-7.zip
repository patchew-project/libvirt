        gtk-doc \
        hwdata \
        intltool \
        json-glib-devel \
        libarchive-devel \
        libsoup-devel \
        libtool \
        libxml2 \
        libxml2-devel \
        libxslt-devel \
        lsof \
        make \
        net-tools \
        ninja-build \
        patch \
        perl \
        pkgconfig \
        python2-setuptools \
        python3 \
