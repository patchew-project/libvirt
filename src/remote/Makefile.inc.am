remote/libvirtd.conf: remote/libvirtd.conf.in
	$(AM_V_GEN)$(SED) \
		-e '/[@]CUT_ENABLE_IP[@]/d' \
		-e '/[@]END[@]/d' \
		-e 's|[@]sysconfdir[@]|@sysconfdir@|' \
		-e 's|[@]DAEMON_NAME[@]|libvirtd|' \
		$< > $@

remote/virtproxyd.conf: remote/libvirtd.conf.in
	$(AM_V_GEN)sed \
		-e '/[@]CUT_ENABLE_IP[@]/d' \
		-e '/[@]END[@]/d' \
		-e 's/[@]DAEMON_NAME[@]/virtproxyd/' \
		$< > $@

